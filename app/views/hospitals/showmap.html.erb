<!DOCTYPE html>
<html>
  <head>
    <style>
    a {
      color: #FFF;
    }
    a:hover, a:visited, a:focus {
      color: #FFF;]
      text-decoration: none;
      background: transparent;
    }
    #map {
      height: 100vh;
      width: 100%;
    }
    #logo {
      position: absolute;
      top: 0;
      width: 100%;
      text-align: center;
      background-color: white;
    }
    .bottom {
      width: 100%;
      position: absolute;
      bottom: 30px;
      padding: 30px 90px;
    }
    .bottom a:hover, #back:hover {
      text-decoration: none;
    }
    #back {
      padding: 24px;
      font-size: 25px;
    }
    #medicalhelp {
       height: 18vh;
    }
    </style>
  </head>
  <body>
    <div id="map" class="relative">
    </div>

    <script>
      function initMap() {
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 15,
          center: {lat: -8.05428, lng: -34.8813},
        });

        var icons = {
          clin: {
            icon: {
            size: new google.maps.Size(20, 20),
            scaledSize: new google.maps.Size(20, 20),
            url:"img/pin_hospitais.png"
          }
          },
          cons: {
            icon: {
            size: new google.maps.Size(20, 20),
            scaledSize: new google.maps.Size(20, 20),
            url:"img/pin_hospitais.png"
          }
        },
          unid: {
            icon: {
            size: new google.maps.Size(20, 20),
            scaledSize: new google.maps.Size(20, 20),
            url:"img/pin_hospitais.png"
          }
        },
          hosp: {
            icon: {
            size: new google.maps.Size(20, 20),
            scaledSize: new google.maps.Size(20, 20),
            url:"img/pin_hospitais.png"
          }
        },
          acad: {
            icon: {
            size: new google.maps.Size(20, 20),
            scaledSize: new google.maps.Size(20, 20),
            url:"img/pin_user.png"
          }
          }
        };

        //var infoWindow = new google.maps.InfoWindow({map: map});
        // Try HTML5 geolocation.
        if (navigator.geolocation) {
          navigator.geolocation.getCurrentPosition(function(position) {
            var pos = {
              lat: position.coords.latitude,
              lng: position.coords.longitude
            };
            map.setCenter(pos);
          }, function() {
            handleLocationError(true, infoWindow, map.getCenter());
          });
        } else {
          // Browser doesn't support Geolocation
          handleLocationError(false, infoWindow, map.getCenter());
        }

        "<% @consultorios.each do |consultorio| %>"
          var coordenadas = new google.maps.LatLng("<%= consultorio.nu_latitude %>" ,"<%= consultorio.nu_longitude %>");
          //window.alert("<%= @consultorios.length %>");
          var marker = new google.maps.Marker({
            position: coordenadas,
            //map: map
            icon: icons.cons.icon,
            title: "<%= consultorio.no_fantasia %>"
          });
          marker.setMap(map);
        "<% end %>"

        "<% @clinicas.each do |clinica| %>"
          var coordenadas = new google.maps.LatLng("<%= clinica.nu_latitude %>" ,"<%= clinica.nu_longitude %>");
          //window.alert("<%= @clinicas.length %>");
          var marker = new google.maps.Marker({
            position: coordenadas,
            //map: map
            icon: icons.clin.icon,
            title: "<%= clinica.no_fantasia %>"
          });
          marker.setMap(map);
        "<% end %>"

        "<% @unidades_basicas.each do |unidades_basica| %>"
          var coordenadas = new google.maps.LatLng("<%= unidades_basica.nu_latitude %>" ,"<%= unidades_basica.nu_longitude %>");
          //window.alert("<%= @unidades_basicas.length %>");
          var marker = new google.maps.Marker({
            position: coordenadas,
            //map: map
            icon: icons.unid.icon,
            title: "<%= unidades_basica.no_fantasia %>"
          });
          marker.setMap(map);
        "<% end %>"

        "<% @academias.each do |academia| %>"
          var coordenadas = new google.maps.LatLng("<%= academia.nu_latitude %>" ,"<%= academia.nu_longitude %>");
          //window.alert("<%= @academias.length %>");
          var marker = new google.maps.Marker({
            position: coordenadas,
            //map: map
            icon: icons.acad.icon,
            title: "<%= academia.no_fantasia %>"
          });
          marker.setMap(map);
        "<% end %>"

        "<% @hospitals.each do |hospital| %>"
          var coordenadas = new google.maps.LatLng("<%= hospital.nu_latitude %>" ,"<%= hospital.nu_longitude %>");
          //window.alert("<%= @hospitals.length %>");
          var marker = new google.maps.Marker({
            position: coordenadas,
            //map: map
            icon: icons.hosp.icon,
            title: "<%= hospital.no_fantasia %>"
          });
          marker.setMap(map);
        "<% end %>"

      }
      function handleLocationError(browserHasGeolocation, infoWindow, pos) {
        infoWindow.setPosition(pos);
        infoWindow.setContent(browserHasGeolocation ?
                              'Error: Falha na geolocalização, verifique permissão do browser' :
                              'Error: Your browser doesn\'t support geolocation.');
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA3tOwxd4AhG7MSIB-suRz0ZqjiLlq3pTs&callback=initMap">
    </script>
    <div id="logo">
      <img src="img/logo.png" id="medicalhelp"/>
    </div>
    <div class="bottom">
      <a href="../">
        <button id="back" class="btn btn-block btn-primary">Voltar</button>
      </a>
    </div>
  </body>
</html>
